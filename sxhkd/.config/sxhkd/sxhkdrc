# -- Sxhkd Config -- #

# Reload the config
super + shift + Escape
	pkill -USR1 -x sxhkd && notify-send "Reloading the keybinds..."

# -- Dmenu -- #

# Run prompt
super + r
  dmenu_run

# Window Switcher
alt + Tab
  dmenu_alttab

# Flatpak Launcher
super + p
  dmenu_flatpak

# Clipboard
super + shift + c
  dmenu_clip

# Emoji
super + shift + e
  dmenu_emoji

# Nerd Fonts
super + alt + e
  dmenu_nerdfont

# Powermenu
super + shift + p
  dmenu_power

# Notes
super + n
  dmenu_notebook

# Dmenu menu
super + alt + m
  dmenu_menu

# -- System -- #

# Brightness
XF86MonBrightness{Up,Down}
  brightnessctrl {--inc,--dec} 5

# -- Media -- #

# Volume
super + {Up,Down}
  volumectrl {--inc,--dec} 5

super + shift + Down
  volumectrl --togglemute

XF86Audio{Raise,Lower}Volume
  volumectrl {--inc,--dec} 5

XF86AudioMute
  volumectrl --togglemute

# Music
super + {Right,Left}
  songctrl {--skip,--previous}

super + Pause
  songctrl --togglepause

super + s
  songctrl --togglepause

XF86Audio{Next,Prev}
  songctrl {--skip,--previous}

XF86AudioPlay
  songctrl --togglepause

# Browser
super + alt + {Right,Left}
  browserctrl {--skip,--previous}

super + alt + Pause
  browserctrl --togglepause

super + alt + s
  browserctrl --togglepause

alt + XF86Audio{Next,Prev}
  browserctrl {--skip,--previous}

alt + XF86AudioPlay
  browserctrl --togglepause

# -- Applications -- #

# Terminal
super + Return
  $TERMINAL

# File Manager
super + f
  $GUIF

# Browser
super + b
  $BROWSER

# Music
super + m
	flatpak run $GMUSIC

# Neovide
super + e
  $GEDIT

# Discord
super + shift + d
  flatpak run dev.vencord.Vesktop

# Signal
super + shift + g
	signal-desktop

# -- Record/Screen -- #

# Record Screen
super + alt + r
	record-toggle

# Screenshot
Print
	sstool --select

super + Print
	sstool --screen

super + shift + Print
	sstool --fullscreen

super + ctrl + Print
	sstool --window

super + alt + Print
  sstool --colorpicker

# -- Wallpaper -- #

# Set Wallpaper
super + shift + w
	xwall themewall ~/Pictures/Wallpapers
